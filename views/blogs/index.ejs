<!DOCTYPE html>
<html lang="en">
  <%-include('../partials/head.ejs')%>
<body>
  <div class="container">
    <%-include('../partials/nav.ejs')%>

    <div class="blog content">
      <h1>Home Page</h1>
  
      <% if(blogs.length > 0) { %>
        <% blogs.forEach(blog => { %>
          <a href="/blogs/<%=blog._id%>" class="single">
            <h2><%=blog.title%></h2>
            <p><%=blog.snippet%></p>
            <p><%=blog.body%></p>
          </a>
        <% }) %>
      <% } %>
    </div>
  </div>

  <%-include('../partials/footer.ejs')%>
</body>
</html>